<div class="box">
  <div class="box-inner">
    <h1>アカウント編集</h1>
    <p>ニックネーム・メールアドレス・パスワードを変更できます。</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <div class="field box-text">
        <%= f.label :nickname %><br />
        <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
      </div>

      <div class="field box-email">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field box-password">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password" %>
        <small>空欄のままなら変更しません</small><br>
      </div>

      <div class="field box-password">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field box-password">
        <%= f.label :current_password %> <br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "更新", class: "btn btn-primary btn-block my-5" %>
      </div>
    <% end %>

    <hr class="devise-link my-5">
    <%= link_to "トップページ", :back, class: "btn btn-info btn-block my-5", method: :get %>
    <%= button_to "アカウント削除", registration_path(resource_name), class: "btn btn-danger btn-block my-5", data: { confirm: "本当よろしいですか?" }, method: :delete %>
  </div>
</div>
