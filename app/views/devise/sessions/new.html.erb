<div class="box">
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h1>ログイン</h1>
      <% flash.each do |name, msg| %>
        <div class="alert alert-<%= name %>" role="alert" id="alert">
          <a href="#" class="close" data-dismiss="alert">×</a>
          <%= msg %>
        </div>
      <% end %>
      <div class="box-email">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="box-password">
        <div class="a-row">
          <div class="column-left">
            <%= f.label :password, "パスワード" %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="remember">
          <%= f.check_box :remember_me %>
          <%= f.label :remember, "次回から自動的にログイン" %>
        </div>
      <% end %>
      <div class="box-login my-3">
        <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
      </div>
      <hr class="devise-link my-5">
      <div class="box-forgot-password">
        <%= link_to "パスワードを忘れましたか？", new_user_password_path ,class: "btn btn-secondary btn-block"%>
      </div>
    <% end %>
  </div>
</div>
