<div class="box">
  <div class="box-inner">
    <h1>パスワード変更</h1>

    <%= form_for(resource, as: resource_name, url: update_user_password_path, html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <div class="box-password">
          <%= f.label :password, "新規パスワード" %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
          <small>パスワードは6文字以上</small><br>
        </div>
      </div>

      <div class="field">
        <div class="box-password">
          <%= f.label :password_confirmation, "新規パスワード(確認用)" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="box-login my-3 actions">
        <%= f.submit "パスワード再設定", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <hr class="devise-link my-5">
    <div class="box-forgot-password">
      <%= link_to "ログイン", new_session_path(resource_name) ,class: "btn btn-info btn-block"%>
    </div>
  </div>
</div>
