<h1 class="my-3">食事新規投稿</h1>

<!-- ここにezdzの画像Drag & Dropが出て欲しい！ -->
<form action="" method="post" enctype="multipart/form-data">
    <input type="file" accept="image/png, image/jpeg">
</form>

<section id="meal_form">
  <div class="meal_form-container">
    <%= form_with model: @meal, local: true do |f| %>
      <%= f.file_field :image %>
      <div class="form-group my-3">
        <%= f.text_area :content, class: 'form-control', rows:5, required: true %>
        <%= f.submit "投稿", class: 'btn btn-primary btn-block my-3' %>
        <hr>
        <a class="btn btn-info btn-block my-3" href="/meals" role="button">食事投稿一覧へ</a>
      </div>
    <% end %>
  </div>
</section>
