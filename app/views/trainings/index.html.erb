<div class="mx-auto" style="width: 700px;">
  <div class="form-group">
    <a class="btn btn-primary btn-block" href="/trainings/new" role="button">運動投稿画面へ</a>
  </div>

  <div class="card">
    <% @trainings.each do |training| %>
    <% if training.image? %>
    <div class="card-header text-center">
      <img class="card-img-top">
      <%= image_tag training.image_url.to_s %>
    </div>
    <% end %>
    <div class="card-body">
      <p class="card-text"><%= simple_format(training.content) %></p>
    </div>
    <div class="card-footer">
      【投稿日】<%= l training.created_at, format: :long %>
      <p class ="text-right">
      <%= link_to "編集", edit_training_path(training), method: :get %>
      <%= link_to "削除", training, method: :delete, data: { confirm: "削除しますか?" } %></p>
    </div>
    <% end %>
  </div>
</div>
