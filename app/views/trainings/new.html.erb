<h1>運動新規投稿</h1>

<div id="container">
  <section id="training_form">
    <div class="training_form-container">
      <%= form_with model: @training, local: true do |f| %>
        <div class="form-group">
          <%= f.file_field :image %>
          <%= f.text_area :content, class: 'form-control', rows:5 %>
        </div>
        <%= f.submit "投稿", class: 'btn btn-primary btn-block',data: {confirm: "新規投稿しますか?"} %>
        <hr>
        <a class="btn btn-info btn-block" href="/trainings" role="button">運動投稿一覧へ</a>
      <% end %>
    </div>
  </section>
</div>
